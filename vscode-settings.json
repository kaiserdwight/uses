{
    // terminal
    "php.validate.executablePath": "C:\\laragon\\bin\\php\\php-7.2.19-Win32-VC15-x64\\php.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    "terminal.integrated.rendererType": "dom",
    "search.useIgnoreFiles": false,
    // workbench
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Cobalt2",
    "workbench.iconTheme": "vs-seti",
    "workbench.editor.tabSizing": "shrink",
    "explorer.openEditors.visible": 0,
    "breadcrumbs.enabled": true,
    "editor.minimap.enabled": true,
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "inline",
    "emmet.triggerExpansionOnTab": true,
    //typography
    "editor.fontLigatures": true,
    "editor.fontFamily": "Victor Mono Medium",
    "editor.fontSize": 12,
    "editor.fontWeight": "400",
    "editor.lineHeight": 25,
    "editor.letterSpacing": 0.8,
    //cursor
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.cursorWidth": 2,
    // editor
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "all",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "explorer.confirmDelete": false,
    // extensions
    "auto-close-tag.fullMode": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "vetur.format.options.tabSize": 2,
    "vetur.format.defaultFormatter.html": "prettyhtml",
    // reactjs settings
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // turn it off for JS and JSX, when using eslint
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    }
}