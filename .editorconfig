# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Settings for TypeScript and JavaScript files
[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 80
