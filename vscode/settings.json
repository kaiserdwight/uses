{
    /* terminal */
    "php.validate.executablePath": "C:\\laragon\\bin\\php\\php-7.4.19-Win32-vc15-x64\\php.exe",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "search.useIgnoreFiles": false,
    /* workbench */
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Cobalt2",
    "workbench.iconTheme": "vs-seti",
    "workbench.editor.tabSizing": "shrink",
    "explorer.openEditors.visible": 0,
    "breadcrumbs.enabled": true,
    "breadcrumbs.showClasses": false,
    "breadcrumbs.showModules": false,
    "editor.minimap.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "inline",
    "emmet.triggerExpansionOnTab": true,
    "search.collapseResults": "auto",
    /* typography */
    "editor.fontLigatures": true,
    "editor.fontFamily": "Victor Mono Medium",
    "editor.fontWeight": "400",
    "editor.fontSize": 12,
    "editor.lineHeight": 28,
    "editor.letterSpacing": 0.9,
    /* cursor */
    "editor.cursorStyle": "line",
    "editor.cursorBlinking": "solid",
    "editor.cursorWidth": 2,
    /* editor */
    "editor.formatOnSave": true,
    "editor.renderWhitespace": "all",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": true,
    "explorer.confirmDelete": false,
    // "files.exclude": {
    //     "**/vendor": true,
    //     "**/node_modules": true,
    //     "**/storage/framework/views": true,
    //     "**/storage/debugbar": true,
    // },
    /* extensions */
    "[blade]": {
        "editor.autoClosingBrackets": "always"
    },
    "[vue]": {
        "editor.formatOnType": false,
        // "editor.formatOnSave": false
    },
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.statusBar.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.recentChanges.highlight.locations": [
        "gutter",
        "line",
        "overview"
    ],
    "vetur.format.options.tabSize": 2,
    "vetur.format.defaultFormatter.html": "js-beautify-html",
    "vetur.format.defaultFormatter.js": "vscode-typescript",
    // reactjs settings
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // turn it off for JS and JSX, when using eslint
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": false
    }
}